<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ecct.demo.SignUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpLabel"
        android:text="@string/SignLabel"
        android:textColor="@color/dar_grey"
        android:layout_gravity="center"
        android:textSize="@dimen/S36sp"
        android:layout_marginTop="@dimen/S150dp"
        android:layout_centerHorizontal="true"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signUpLabel"
        android:layout_marginTop="@dimen/S20dp"
        android:focusableInTouchMode="true"
        android:id="@+id/signUpEditTextLayout"
        android:hint="@string/mobileHintText"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        style="@style/TextInputLayout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpEditText"
            android:inputType="phone"
            android:ems="15"
            android:maxLines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/signUpButton"
        android:layout_width="@dimen/S240dp"
        android:layout_height="@dimen/S70dp"
        android:layout_gravity="center"
        android:background="@drawable/round_background_primary_color"
        style="@style/ButtonStyle"
        android:text="@string/SignLabel"
        android:textSize="@dimen/S16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/signUpEditTextLayout"
        android:layout_marginTop="@dimen/S100dp"
        android:layout_marginBottom="@dimen/S30dp"
        android:layout_centerHorizontal="true"/>
</LinearLayout>